<Window x:Class="AESwitcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AESwitcher"
        mc:Ignorable="d"
        Title="MainWindow" Width="100" Height="27" SizeToContent="Width" WindowStyle="None" 
        AllowsTransparency="True" Background="Transparent" ShowInTaskbar="False" Topmost="True" ResizeMode="NoResize" Top="-100">
    <Grid>
        <!-- Notification area -->
        <Border BorderThickness="0" Background="Black" Opacity="0.8" BorderBrush="Black">
            <StackPanel Margin="3,3,3,0">
                <Label x:Name="lblEndpoint" Foreground="White" Content="Device" FontFamily="Lucida Console"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
